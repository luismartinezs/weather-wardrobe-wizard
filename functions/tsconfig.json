{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "jsx": "preserve",
    "paths": {
      "@functions/*": ["./src/*"],
      "@/*": ["../src/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src", "**/*.ts", "**/*.tsx"]
}
